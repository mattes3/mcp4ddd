{
    "name": "@ddd-components/scaffolder",
    "version": "2.0.0",
    "description": "MCP server that generates code based on the Domain-Driven Design methodology.",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build:mcp": "tsc -b && esbuild src/index.ts --bundle --minify --outfile=./dist/mcp4ddd.js --format=esm --platform=node --loader:.hbs=text",
        "build:openclaw:js": "tsc -b && esbuild src/OpenClawPlugin.ts --bundle --outfile=./dist/openclaw/package/openclaw4ddd.js --format=esm --platform=node --loader:.hbs=text",
        "build:openclaw:json": "tsx --loader ./test/hbs-loader.mjs src/generateOpenClawJSON.ts >./dist/openclaw/package/openclaw.plugin.json",
        "build": "pnpm build:mcp && pnpm build:openclaw:js && pnpm build:openclaw:json && bash ./openclaw/openclaw-build.sh",
        "inst:mcp": "pnpm build && cp ./dist/mcp4ddd.js ~/bin/",
        "dev": "pnpm build && pnpm node ./dist/mcp4ddd.js",
        "test": "tsx --loader ./test/hbs-loader.mjs --test --test-reporter spec test/*.spec.ts",
        "integrationtest": "tsx --loader ./test/hbs-loader.mjs --test --test-reporter spec test/*.integrated.ts",
        "test:watch": "tsx --loader ./test/hbs-loader.mjs --test --test-reporter spec --watch test/*.spec.ts"
    },
    "keywords": [
        "ddd",
        "domain-driven-design",
        "mcp",
        "openclaw",
        "code-generation"
    ],
    "author": "Matthias Bohlen",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "@aws-sdk/client-dynamodb": "^3.887.0",
        "@aws-sdk/lib-dynamodb": "^3.887.0",
        "@tsconfig/node22": "^22.0.2",
        "@tsconfig/strictest": "^2.0.5",
        "@types/node": "^24.3.1",
        "electrodb": "^2.15.1",
        "esbuild": "^0.25.9",
        "expect": "^30.1.2",
        "openclaw": "2026.2.19-2",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@ddd-components/runtime": "workspace:*",
        "@modelcontextprotocol/sdk": "^1.26.0",
        "handlebars": "^4.7.8",
        "zod": "3.25.76",
        "zod-to-json-schema": "3.25.1"
    }
}
